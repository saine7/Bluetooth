<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gayedesign.alagiesaine.bluetooth.MainActivity">

    <Button
        android:text="On"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/onButton"
        android:onClick="onButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Paired devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discoverableButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:id="@+id/textView"
        android:textSize="30sp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView" />

    <Button
        android:text="Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/offButton"
        android:onClick="offButton"
        android:layout_alignBaseline="@+id/onButton"
        android:layout_alignBottom="@+id/onButton"
        android:layout_toRightOf="@+id/onButton"
        android:layout_toEndOf="@+id/onButton"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"
        android:layout_marginStart="20dp" />

    <Button
        android:text="Cancel descovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/discoverableButton"
        android:layout_toRightOf="@+id/discoverableButton"
        android:layout_toEndOf="@+id/discoverableButton"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:id="@+id/cancelDescovery"
        android:onClick="cancelDescovery"/>

    <Button
        android:text="Discoverable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discoverableButton"
        android:onClick="discoverableButton"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/onButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Paired devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pairedDevicesButton"
        android:onClick="pairedDevicesButton"
        android:layout_alignTop="@+id/offButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
